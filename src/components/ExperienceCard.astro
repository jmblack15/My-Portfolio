---
const { title, company, location, date, achievements } = Astro.props;
---

<div class="relative pl-6 sm:pl-10 border-l-2 border-purple-600/50">
  <div
    class="absolute left-[-10px] top-2 w-4 h-4 bg-purple-600 border-2 border-white rounded-full z-10 shadow-md"
  >
  </div>

  <div class="mb-6">
    <h3 class="text-lg font-semibold text-white">
      🚀 {title}
      <span class="text-purple-400">| {company}</span>
    </h3>
    <p class="text-sm text-gray-400 mt-1">🌍 {location}</p>
    <p class="text-sm text-gray-500">📅 {date}</p>

    {
      achievements.length > 0 && (
        <div class="mt-4 bg-white/5 p-4 rounded-xl border border-white/10 backdrop-blur-sm">
          <h4 class="text-sm text-purple-300 font-medium mb-2">
            🎯 Key Achievements
          </h4>
          <ul class="list-disc list-inside space-y-1 text-gray-300 text-sm">
            {achievements.map((item: unknown) => (
              <li>{item}</li>
            ))}
          </ul>
        </div>
      )
    }
  </div>
</div>
