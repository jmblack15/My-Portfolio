---
const { skills, title } = Astro.props;
---

<div
  class="rounded-lg border border-border/50 bg-background/80 backdrop-blur-md backdrop-filter shadow-sm dark:bg-card/30 dark:backdrop-blur-md hover:shadow-md transition-all duration-300 ease-in-out p-4"
>
  <h3 class="text-center mb-3">{title}</h3>

  <div class="flex flex-col justify-center min-h-[160px]">
    {
      skills.map((skill: string) => (
        <div
          class="px-3 py-1 bg-muted/80 backdrop-blur-sm rounded-md text-sm border border-purple-500/10 shadow-sm"
          style="opacity: 1; transform: none;"
        >
          {skill}
        </div>
      ))
    }
  </div>
</div>
