---
const { skills, title } = Astro.props;
---

<div
  class="rounded-xl border border-border/40 bg-background/80 backdrop-blur-sm shadow transition-shadow hover:shadow-lg p-6 flex flex-col gap-4 dark:bg-card/30"
>
  <h3 class="text-center text-xl font-semibold text-primary mb-2">{title}</h3>

  <div class="flex flex-wrap justify-center gap-2">
    {
      skills.map((skill: string) => (
        <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-gradient-to-tr from-purple-500 to-blue-500 text-white shadow-sm hover:scale-105 transition-transform duration-200">
          {skill}
        </span>
      ))
    }
  </div>
</div>
